package accessmodifier;

public class Warrior { //정의부, 실행은 Main에서 할 예정임
   
	public int hp;
	public int stranght;
	public String name;
	public int lv;
	public int money;
	
	// 생성자를 만들어주시되, name만 사용자에게 입력받고
	// 나머지는 hp20, str 3, lv 1, money 0
	
	public Warrior(String n) {
	name = n;	//입력받은 사용자 이름 n을 name에 저장				
	hp = 20;
	stranght = 3 ;
	lv = 1;
	money = 0;
	 }
	// hunt(사냥하기) 메서드를 만들어보겠습니다
	// 이 메서드는 실행시 사냥하는 상황을 구현하며
	// 체력이 2 깍이고 돈을 10씩 획득합니다
	// 사냥결과 체력이 X가 되었고, 소지금은 Y입니다 라고 출력합니다.
	
	public void hunt() {
	System.out.println();
		
}